<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creation.adesh.mcassignment3.SwitchUserFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchname"
        android:layout_centerHorizontal="true"
        android:minWidth="200dp"
        android:hint="@string/enterName"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switchText"
        android:id="@+id/switchuserbutton"
        android:layout_below="@id/switchname"
        android:layout_alignEnd="@id/switchname"/>

</RelativeLayout>
